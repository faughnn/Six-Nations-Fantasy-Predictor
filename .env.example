# Database
DATABASE_URL=postgresql+asyncpg://rugby:rugbypass@db:5432/fantasy_rugby
POSTGRES_DB=fantasy_rugby
POSTGRES_USER=rugby
POSTGRES_PASSWORD=rugbypass

# Auth — REQUIRED, generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=

# Google OAuth (optional — leave blank to disable Google sign-in)
GOOGLE_CLIENT_ID=

# CORS — comma-separated list of allowed frontend origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# GitHub Issues — token needs Issues write permission, repo is "owner/repo"
GITHUB_TOKEN=
GITHUB_REPO=

# Frontend
VITE_API_URL=http://localhost:8000
VITE_GOOGLE_CLIENT_ID=
